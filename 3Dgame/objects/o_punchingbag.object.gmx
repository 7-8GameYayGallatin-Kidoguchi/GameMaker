    d3d_transform_add_translation(lengthdir_x(1,o_camera.dir_face), lengthdir_y(1,o_camera.dir_face), 0);
    
    draw_rectangle(-8,0,(16*(hp/100))-8,2,false);
    
    draw_set_color(c_white);
    d3d_transform_set_identity();
}
